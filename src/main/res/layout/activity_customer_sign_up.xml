<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerSignUp">

    <EditText
        android:id="@+id/etId6"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:background="#12000000"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="249dp" />

    <Button
        android:id="@+id/btnLogin4"
        android:layout_width="326dp"
        android:layout_height="45dp"
        android:background="#3B3BFA"
        android:text="Sign Up as Faculty"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnLoginSp3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/etId7"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:background="#12000000"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="196dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:background="#12000000"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="phone"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="301dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:background="#12000000"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="12sp"
        android:paddingRight="12sp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="356dp" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="175dp"
        android:layout_height="172dp"
        app:srcCompat="@drawable/img_signup_pic"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btnLoginSp3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="447dp"
        android:layout_height="44dp"
        android:background="@drawable/button_border"
        android:drawableTop="#000000"
        android:text="@string/already_have_an_account_log_in"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteY="557dp" />

</android.support.constraint.ConstraintLayout>